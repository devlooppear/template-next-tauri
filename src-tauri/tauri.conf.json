{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "next-tauri-pwa",
  "version": "0.1.0",
  "identifier": "com.next-tauri-pwa.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "IS_TAURI=true yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "Next.js Tauri PWA",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
